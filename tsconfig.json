{
  "compilerOptions": {
    "target": "es2016",
    "module": "ESNext",
    "declarationDir": "./types",
    "outDir": "./dist",
    "declaration": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "lib": [
      "dom",
      "esnext"
    ],
    "jsx": "react"
  },
  "include": [
    "src/**/*"
  ]
}